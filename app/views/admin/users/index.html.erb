<h1>ユーザー管理画面</h1>
<p><%= notice %></p>
<%= link_to 'ユーザーを登録する',new_admin_user_path %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>タスク数</th>
      <th>管理権限</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <th></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.daily_reports.count %></td>
        <td><%= user.admin %></td>

        <td><%= link_to '詳細', admin_user_path(user) %></td>
        <td><%= link_to '編集', edit_admin_user_path(user) %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, date: { confirm: '本当に削除してもいいですか？' } , class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    </tbody>
  <% end %>
</table>