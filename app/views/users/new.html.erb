<div class="container py-3">
  <div class="row">
    <div class="col">
      <h1>新規利用者</h1>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %> 件のエラーがあります。</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @user, local: true) do |f| %>
        <%= f.label :名前 %>
        <%= f.text_field :name, :placeholder => "例)山田 太郎" %>

        <p><%= f.label :メールアドレス %>
        <%= f.email_field :email, :placeholder => "例)xxxxx@xxxx.xx" %>

        <p><%= f.label :パスワード %>
        <%= f.password_field :password, :placeholder => "例)abc123456" %>

        <p><%= f.label :確認用パスワード %>
        <%= f.password_field :password_confirmation, :placeholder => "例)abc123456" %>

        <p><%= f.submit "登録して日報を書く" %>
      <% end %>
    </div>
  </div>
</div>
      
