<p>
  <h3><strong>タイトル</strong></h3>
  <%= @photo.title %>
</p>

<% if @photo.images.attached? %>
<div style="width: 700px;">
  <p><strong>登録した写真</strong></p>
  <% @photo.images.each do |image| %>
    <a href="<%= url_for(image) %>">
      <%= image_tag image, size: '600x600' %>
    </a> 
  <% end %>
</div>
<%= link_to '写真を編集', edit_daily_report_photo_path(@photo),class: 'btn btn-outline-secondary' %>
<%= link_to '写真一覧に戻る', daily_report_photos_path,class: 'btn btn-outline-secondary' %>
<% end %>






<p>コメント一覧</p>


<h3><id="notice"><%= notice %></h3>
<!-- このcomments_areaというHTMLのidを取得して、そのdivの部分だけを更新する -->
<div id="photo_comments_area">
  <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
  <%= render partial: 'photo_comments/index', locals: { photo_comments: @photo_comments, photo: @photo } %>
</div>

<!-- コメント入力欄をブログの詳細ページに表示するためのrender -->

<%= render partial: 'photo_comments/form', locals: { daily_report: @daily_report, photo_comment: @photo_comment, photo: @photo } %>

<%= link_to '編集', edit_daily_report_photo_path(@photo) %>
<%= link_to '戻る', daily_report_photos_path %>