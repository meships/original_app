<p id="notice"><%= notice %></p>

<h1>写真</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @photos %>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.images.attached? ? 1 : 0 %></td>
        <td><%= link_to 'Show', daily_report_photo_path(@daily_report,photo.id) %></td>
        <td><%= link_to '削除', daily_report_photo_path(@daily_report,photo.id) ,method: :delete,data: { confirm: "本当に削除してもいいですか？"} %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to '写真を付け加える', new_daily_report_photo_path %>
<%= link_to '日報に戻る', daily_report_path(@daily_report,@photo) %>