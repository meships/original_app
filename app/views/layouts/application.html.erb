<!DOCTYPE html>
<html>
  <head>
    <title>Laboratory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
      <%= link_to "プロフィール", user_path(current_user.id) %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>


      <%= link_to "管理者画面",admin_users_path,class:"login" if admin? %>
    <% else %>
      <%= link_to "利用者を新規作成", new_user_path %>
      <%= link_to "ログイン", new_session_path %>


      <%= link_to 'ゲストログイン', login_guest_login_path(guest_login: true), method: :post %>
      <%= link_to "管理者ゲストログイン", admin_guest_login_path, method: :post %>
    <% end %>

    <%= yield %>
  </body>

</html>
