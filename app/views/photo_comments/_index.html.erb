<ul>
  <% photo_comments.each do |photo_comment| %>
    <% if photo_comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_photo_comment_<%= photo_comment.id %>"></div>
        <p><%= photo_comment.comment %></p>
        <p><%= link_to "コメント編集", edit_daily_report_photo_photo_comment_path(photo.daily_report_id ,photo, photo_comment), remote: true %></p>
        <p><%= link_to "コメント削除", daily_report_photo_photo_comment_path(photo.daily_report_id, photo_comment.photo_id, photo_comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>